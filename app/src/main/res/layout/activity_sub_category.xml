<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SubCategoryActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/category_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:mt_speechMode="false" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/card_category">

        <ImageView
            android:id="@+id/img_cardback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>

        <TextView
            android:id="@+id/txt_Category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/text_size_xlarge"
            android:text="this is title"
            android:textColor="@color/white"
            />

    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Choose SubCategory"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            />
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/card_sub_category">

          <ListView
              android:id="@+id/list_subcategory"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:isScrollContainer="false"
              >

          </ListView>

           <!-- <LinearLayout
                android:id="@+id/list_subcategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>-->

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>