<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:id="@+id/linear_search"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/freelancer_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Web development"
                android:textColor="@color/fbutton_color_belize_hole"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/txt_freelancer_fixed_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:text="@string/fixedprice"
                    android:textSize="13dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="#31acf4" />

                <TextView
                    android:id="@+id/txt_freelancer_price_range"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/price_range"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="13dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="#31acf4" />

                <TextView
                    android:id="@+id/txt_freelancer_job_posting"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="13dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="#31acf4" />

                <TextView
                    android:id="@+id/txt_freelancer_quotes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/quotes"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="13dp" />

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@color/fbutton_color_peter_river">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_thumb_up_black_24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback"
                        android:layout_marginTop="8dp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>-->
            </LinearLayout>

            <TextView
                android:id="@+id/txt_freelancer_job_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="3"
                android:text="@string/job_posting_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/freelancer_image_profile"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/images" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name_freelancer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jaime Lindsey"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/fbutton_color_belize_hole"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/txt_freelancer_state"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/country"
                            android:textAlignment="center"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="#31acf4" />

                        <TextView
                            android:id="@+id/txt_freelancer_earing"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/moneyearned"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="#31acf4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/fbutton_color_peter_river"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_thumb_up_black_24dp" />

                            <TextView
                                android:id="@+id/txt_freelancer_per"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/feedback"
                                android:textColor="@color/white"
                                android:textSize="13dp" />


                        </LinearLayout>
                        <!--  android:drawableStart="@drawable/ic_thumb_up_black_24dp"-->

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btn_apply"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_border"
                            android:shadowColor="@android:color/white"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="17dp"
                            app:cornerRadius="3dp"
                            app:fButtonColor="@color/fbutton_color_peter_river"
                            app:shadowColor="@android:color/black"
                            app:shadowEnabled="true"
                            app:shadowHeight="2dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>