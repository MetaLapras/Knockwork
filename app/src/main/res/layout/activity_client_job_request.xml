<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.Activities.ClientJobRequest">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_lancer_jobName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/web"
                android:gravity="center"
                android:textColor="@color/fbutton_color_belize_hole"
                android:textSize="21dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularImage_profile"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_margin="7dp"
                    android:src="@drawable/images" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_lancer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Jaime Lindsey"
                        android:textColor="@color/fbutton_color_belize_hole"
                        android:textSize="19dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_lancer_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/country"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="7sp"
                            android:background="#31acf4" />

                        <TextView
                            android:id="@+id/txt_lancer_earing"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/moneyearned"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="7sp"
                            android:background="#31acf4" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/fbutton_color_peter_river"
                            android:orientation="horizontal">
                            <!-- <ImageView
                                android:layout_width="16dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_thumb_up_black_24dp"
                                android:layout_marginLeft="10dp"/>-->

                            <TextView
                                android:id="@+id/txt_lancer_per"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:drawableStart="@drawable/ic_thumb_up_black_24dp"
                                android:drawablePadding="5dp"
                                android:text="@string/feedback"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_description_lancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:text="@string/info" />

            <TextView
                android:id="@+id/txt_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/fbutton_color_belize_hole"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="@string/timeline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_border"
                    android:editable="false"
                    android:hint="Start Time"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorAccent"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_border"
                    android:editable="false"
                    android:hint="End Time"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorAccent"
                    app:met_singleLineEllipsis="true" />

