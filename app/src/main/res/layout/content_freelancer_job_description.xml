<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Freelancer.Activities.FreelancerJobDescriptionActivity"
    tools:showIn="@layout/app_bar_freelancer_job_description">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_below="@id/card_job">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_job_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Professional Designer needed for Tshirt and other Products, web Projects" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginBottom="10dp"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_circle"
                                android:tint="@color/colorPrimary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_jobduration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1-3 months"
                                android:textSize="10sp"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_monetization_on"
                                android:tint="@color/colorPrimary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Budget"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_job_budget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.5k to 2.5k"
                                android:textSize="10sp"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_images"
                                android:tint="@color/colorPrimary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JobType"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txt_job_feature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1-3 months"
                                android:textSize="10sp" />



                        </LinearLayout>
                        
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_job_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/info" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_weight="8">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circularImage_profile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="7dp"
                                android:src="@drawable/images" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_name_lancer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Jaime Lindsey"
                                    android:textColor="@color/fbutton_color_belize_hole"
                                    android:textSize="12dp"
                                    android:textStyle="bold"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_lancer_state"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="@string/country"
                                        android:textColor="@color/black"
                                        android:textSize="9sp" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="9dp"
                                        android:background="#31acf4" />

                                    <TextView
                                        android:id="@+id/txt_lancer_earing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="9dp"
                                        android:text="@string/moneyearned"
                                        android:textColor="@color/black"
                                        android:textSize="9sp" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="9dp"
                                        android:background="#31acf4" />

                                    <TextView
                                        android:id="@+id/txt_lancer_per"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:drawableStart="@drawable/ic_thumb_up_black_24dp"
                                        android:text="@string/feedback"
                                        android:drawablePadding="8dp"
                                        android:drawableTint="@color/colorPrimary"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="13dp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!--<Button
                            android:id="@+id/btn_apply_job"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@color/fbutton_color_peter_river"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16dp" />
-->
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_submit_proposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Proposal"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>