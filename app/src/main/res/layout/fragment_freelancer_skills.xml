<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Freelancer.Fragments.FreelancerSkillsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/txt_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of work you need to get done"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/fbutton_color_peter_river"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/spn_category"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_corner"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"></Spinner>

        <TextView
            android:id="@+id/txt_specility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specifically belongs to"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/fbutton_color_peter_river"
            android:gravity="center"/>

        <EditText
            android:id="@+id/freelancer_profile_edtSubcat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_corner"
            android:gravity="top|left"
            android:textSize="15dp"
            android:hint="Java,Android"
            android:padding="5dp" />


        <TextView
        android:id="@+id/freelancer_profile_selfintroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Self Introduction"
        android:textColor="@color/fbutton_color_peter_river"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/freelancer_profile_editselfintroduction"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/border_corner"
        android:gravity="top|left"
        android:textSize="15dp"
        android:hint="write about you in brif"
        android:padding="5dp" />
  <TextView
         android:id="@+id/freelancer_profile_skills"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:text="Skills"
         android:textColor="@color/fbutton_color_peter_river"
         android:textSize="15dp" />

        <MultiAutoCompleteTextView
            android:id="@+id/edit_skil"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_corner"
            android:gravity="top|left"
            android:hint="Select Skills"
            android:paddingLeft="10dp"
            android:completionThreshold="1"
            android:textSize="15dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/freelancer_profile_btnNext"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Next"
            android:textSize="17dp"
            android:layout_gravity="right"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:shadowColor="@android:color/white"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_color_peter_river"
            app:shadowHeight="2dp"
            app:cornerRadius="3dp"
            app:shadowColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>
</FrameLayout>