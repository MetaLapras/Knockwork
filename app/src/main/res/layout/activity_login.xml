        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Email"
            android:text="@string/SignEmail"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_color_peter_river"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Gmail"
            android:text="@string/signgmail"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_gmail"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Facebook"
            android:text="@string/signfacebook"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/com_facebook_blue"
            app:shadowHeight="5dp"
            android:visibility="gone"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Number"
            android:text="@string/signPhoneNumber"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            android:visibility="gone"
            app:fButtonColor="@color/com_facebook_green"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />
