<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_attach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Attachments"
        android:textSize="@dimen/text_size_xlarge"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_attach"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="4">

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_selectpdf"
            android:text="Select PDF"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_color_peter_river"
            app:shadowHeight="5dp"
            app:cornerRadius="0dp"
            app:shadowColor="@android:color/black"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_selectimage"
            android:text="Select Image"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_gmail"
            app:shadowHeight="5dp"
            app:cornerRadius="0dp"
            app:shadowColor="@android:color/black"
            />

    </LinearLayout>


</RelativeLayout>