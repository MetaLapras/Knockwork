<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web development"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/fbutton_color_belize_hole" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_fixed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fixedprice"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_gravity="center"

                android:layout_marginLeft="10dp"
                android:background="#31acf4" />
            <TextView
                android:id="@+id/txt_price_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_range"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#31acf4" />
            <TextView
                android:id="@+id/txt_job_posting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posted2daysago"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#31acf4" />

            <TextView
                android:id="@+id/txt_quotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quotes"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@color/fbutton_color_peter_river">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thumb_up_black_24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    android:layout_marginTop="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>-->
        </LinearLayout>
            <TextView
                android:id="@+id/txt_job_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_posting_info"
                android:layout_marginLeft="3dp"
                android:layout_margin="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_margin="5dp">
                <Button
                    android:id="@+id/btn_job_edit"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="17dp"
                    android:background="@color/fbutton_color_peter_river"
                    android:text="@string/job_posting_edit"/>

                <Button
                    android:id="@+id/btn_job_remove"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/red"
                    android:text="@string/job_posting_remove"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>