                    <!--android:textSize="17dp"-->
                    <!--android:background="@color/fbutton_color_peter_river"-->
                    <!--android:text="@string/job_posting_edit"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_job_edit"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="@string/job_posting_edit"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/white"
                    app:shadowEnabled="true"
                    app:fButtonColor="@color/fbutton_color_peter_river"
                    app:shadowHeight="2dp"
                    app:cornerRadius="3dp"
                    app:shadowColor="@android:color/black"
                    android:layout_marginRight="5dp"
                    />
        </LinearLayout>

                <!--<Button-->
                    <!--android:id="@+id/btn_job_remove"-->
