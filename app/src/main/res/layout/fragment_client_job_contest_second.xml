<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Client.Fragments.ClientJobContestSecondFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/contest_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/fbutton_color_belize_hole"
        android:text="What is the prize money you can offer??" />

        <LinearLayout
            android:id="@+id/context_linear"
            android:layout_below="@+id/contest_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/contest2_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/currency"/>
            <EditText
                android:id="@+id/contest2_edit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Price"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_medium"/>
        </LinearLayout>


        <TextView
            android:layout_below="@+id/context_linear"
            android:id="@+id/contest2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Contest Terms and Condition"
            android:textSize="15dp"/>

        <LinearLayout
            android:id="@+id/contest_linear2"
            android:layout_below="@+id/contest2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_corner"
            android:orientation="vertical">
        <TextView
            android:id="@+id/contest2_terms1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/contest_terms1"/>

        <TextView
            android:id="@+id/contest2_terms2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/contest_terms2"/>

        <TextView
            android:id="@+id/contest2_terms3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/contest_terms3"/>
        </LinearLayout>

        <CheckBox
            android:layout_below="@+id/contest_linear2"
            android:id="@+id/contest2_chk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="I Agree"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">
        <info.hoang8f.widget.FButton
            android:id="@+id/contest2_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/contest2_chk"
            android:shadowColor="@android:color/white"
            android:text="Post Contest"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            app:cornerRadius="3dp"
            app:fButtonColor="@color/fbutton_color_peter_river"
            app:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:shadowHeight="2dp"
            ></info.hoang8f.widget.FButton>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>